!!!
%html
  %head
    %meta{content: 'text/html; charset=US-ASCII', http: { equiv: 'Content-Type'} }/
    %title Protospace
    = stylesheet_link_tag    'application', media: 'all', date: { turbolinks: { track: true } }
    = javascript_include_tag 'application', date: { turbolinks: { track: true } }
    = csrf_meta_tags
  %body
    = render 'layouts/header'
    - if notice
      %p.alert.alert-notice= notice
    - if alert
      %p.alert.alert-error= alert
    = yield
    = render 'layouts/footer'
