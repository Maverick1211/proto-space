- if user_signed_in?
  - if proto.like_user(current_user)
    = button_to proto_like_path(proto_id: proto.id, id: like.id), method: :delete, id: 'like-buttons', remote: true do
      = image_tag('icon_red_heart.svg')
      %span#likes-count
        = likes
  - else
    = button_to proto_likes_path(proto_id: proto.id), id: 'like-buttons', remote: true do
      = image_tag('icon_heart.svg')
      %span#likes-count
        = likes
- else
  = link_to new_user_session_path do
    = image_tag('icon_heart.svg')
  %span
    = likes
