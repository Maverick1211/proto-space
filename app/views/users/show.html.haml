.container.user-page
  %header.user-nav
    .media
      .media-left
        = @user.name
        = image_tag @user.avatar.url, class: 'media-object user-image'
      .media-body
        %h4#top-aligned-media.media-heading
          Top aligned media
          %span.label.label-default.project-number
            = @user.protos.length
            %i Projects
        .proto-user
          %span.degree
            = @user.profile
        .row
          .col-md-6
            %h4 Position
            %p
              = @user.position
          .col-md-6
            %h4 Occupation
            %p
              = @user.occupation
.container.proto-list
  .row
    = render partial: "protos/proto", collection: @user.protos
.text-center
  %ul.pagination
    %li.disabled
      %a{"aria-label": "Previous", href: "#"}
        %span{"aria-hidden": "true"} «
    %li.active
      %a{href: "#"}
        1
        %span.sr-only (current)
    %li
      %a{href: "#"} 2
    %li
      %a{href: "#"} 3
    %li
      %a{href: "#"} 4
    %li
      %a{href: "#"} 5
    %li
      %a{"aria-label": "Next", href: "#"}
        %span{"aria-hidden": "true"} »
