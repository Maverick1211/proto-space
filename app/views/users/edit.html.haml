.container.user-new
  = form_for(@user, as: @user, url: user_path(@user)) do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Edit Profile
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :name, placeholder: 'Username'
          .user-image.col-md-2
            %button.btn.btn-primary Change image
            = f.file_field :avatar
        .col-md-12
          %h4 Profile
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :profile, placeholder: 'Member'
          %h4 Position
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :position, cols: '30', rows: '4', placeholder: 'InputPosition'
          %h4 Occupaiton
          .user-name_image.row
            .user-name.col-md-12
              = f.text_area :occupation, cols: '30', rows: '4', placeholder: 'InputOccupation'
      .row.text-center.user-btn
        = f.submit "Save", class: 'btn btn-lg btn-primary btn-block'

