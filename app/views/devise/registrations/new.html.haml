.container.user-new
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Register
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :username, placeholder: 'Username', autofocus: true
            .user-image.col-md-2
              %button.btn.btn-primary Add image
              = f.file_field :avatar
          .user-email
            = f.email_field :email, placeholder: 'E-mail'
          .user-password
            = f.password_field :password, placeholder: 'Password', autocomplete: "off"
          .user-password
            = f.password_field :password_confirmation, placeholder: 'Confirm Password', autocomplete: "off"
        .col-md-12
          %h4 Profile
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :profile, placeholder: 'InputProfile'
          %h4 Position
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :position, cols: '30', rows: '4', placeholder: 'InputPosition'
          %h4 Occupation
          .user-name_image.row
            .user-name.col-md-12
              = f.text_area :occupation, cols: '30', rows: '4', placeholder: 'InputOccupation'
      .row.text-center.user-btn
        = f.submit "Save", class: 'btn btn-lg btn-primary btn-block'
